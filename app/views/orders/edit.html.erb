<%=  render "layouts/banner"%>

    <h3 class="text-muted">Editar Pedido</h3>

    <%= form_with model: @order do |form|%>
        <div class="field">
            <%= form.label "Número" %> <br />
            <%= form.text_field :order_id, placeholder: @order.id, readonly:true %>
        </div>

        <div class="form-group">
            <%= form.label "Situação"%> <br />
            <%= form.select(:situation_id, Situation.all.collect{|sit| [sit.description, sit.id]}, selected:@order.situation_id) %>
        </div>

        <div class="field">
            <%= form.label "Data"%> <br />
            <%= form.text_field :order_created_at, placeholder: @order.created_at.strftime("%d/%m/%y"), readonly:true %>
        </div>

        <div class="field">
            <%= form.label "Usuário" %> <br />
            <%= form.text_field :user_full_name, placeholder: User.find(@order.user_id).full_name, readonly:true%>
        </div>

        <div class="field">
            <%= form.label "Preço Total" %> <br />
            <%= form.text_field :order_price, placeholder: @order.price, readonly:true %>
        </div>

        <div>
            <%= link_to 'Voltar', orders_path, class:"btn btn-secondary" %>
        </div>

        <%= form.submit "Atualizar pedido", class:"btn btn-success" %>

    <% end %>


<%= render "layouts/footer" %>
