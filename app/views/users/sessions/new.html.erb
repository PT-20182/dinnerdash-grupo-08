<div>
  <%= image_tag  "login-signup.jpg", class:"bg-image"%>
</div>
<div class="loginMenu">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label "Email ou nome de usuário" %><br />
      <%= f.text_field :login, autofocus: true, autocomplete: "login" %>
    </div>

    <div class="field">
      <%= f.label "Senha" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label "Lembrar de mim" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "menu-button" %>
    </div>
  <% end %>
  <%= link_to 'voltar', :back %>
  <hr>
  <p>Não possui conta ainda?</p>
  <%= render "users/shared/links" %>
</div>