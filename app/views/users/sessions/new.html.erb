<div>
  <%= image_tag  "login-signup.jpg", class:"bg-img"%>
</div>
<div class="loginMenu">
  <h2 id="ddash">dinnerdash</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group field">
      <%= f.label "Email" %><br />
      <%= f.text_field :login, autofocus: true, autocomplete: "login", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label "Senha" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label "Mantenha-me conectado" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "fazer login", class: "btn btn-success m-2 login-button" %>
    </div>
  <% end %>
  <hr>
  <p>NÃ£o possui conta?</p>
  <%= render "users/shared/links" %>
</div>