<%= render "layouts/banner" %>

<div class="title-field">
    <h2>Editar usuário</h2>
</div>
<hr>
<%= form_for @user, method: :PUT  do |f| %>
    <div class="edit-box">
        <div class="field">
        <%= f.label :nome_de_usuário %><br />
        <%= f.text_field :username, placeholder: "username" %>
        </div>

        <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "email" %>
        </div>

        <div class="actions">
            <%= f.submit "Salvar alterações", class:"btn btn-success" %>
        </div>

        <div>
            <%= link_to 'Voltar', :back, class:"btn btn-secondary" %>
        </div>
        
        <div class="field">
        <%= f.label :nome_completo %><br />
        <%= f.text_field :full_name, placeholder: "full-name" %>
        </div>

        <div class="form-group">
            <label for="sel1">Conta</label>
            <%= f.select(:role, [['Usuário normal', :user],['Administrador', :admin]], selected: @user.role) %>
        </div> 

        <div class="field">
        <%= f.label :Cadastrado_em %><br />
        <%= f.text_field :created_at, value: @user.created_at.strftime("%Y/%m/%d"), disabled: true %>
        </div>
    </div>
<% end %>
</div>

<%= render 'layouts/footer'%>