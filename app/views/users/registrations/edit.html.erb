<div class="perfilMenu">
  <div class="top-div">
      <h3>dinnerdash</h3>
      <div>
        <p><%= link_to "Home", :back, class:"link" %></p>
        <p><%= link_to "Sair", destroy_user_session_path, method: :delete, class:"link" %></p>
      </div>
  </div>
  <div>
    <h1>Seu perfil</h1>
    <p>Atualize os seus dados pessoais e senha.</p>
  </div>
</div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-box">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label "Nome completo" %><br />
      <%= f.text_field :full_name, autocomplete: "nome completo" %>
    </div>

    <div class="field">
      <%= f.label "Nome de usuário" %><br />
      <%= f.text_field :username, autocomplete: "nome de usuário" %>
    </div>

    <div class="actions">
      <%= f.submit "Salvar mudanças", class:"menu-button" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label "Senha" %> <i>(deixe em branco se não quiser mudar)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
      <% end %>
    </div>

    <div class="field">
      <%= f.label "Confirmar senha" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label "Senha atual" %> <i>(por questões de segurança)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
  </div>
<% end %>
<hr>
<p>Deseja cancelar sua conta? <%= button_to "Cancelar conta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-success" %></p>

