<div class="perfilMenu">
  <div class="top-div">
      <h3>dinnerdash</h3>
      <div>
        <p><%= link_to "Home", :back, class:"link" %></p>
        <p><%= link_to "Sair", destroy_user_session_path, method: :delete, class:"link" %></p>
      </div>
  </div>
  <div class="container">
    <h1>Seu perfil</h1>
    <p>Atualize os seus dados pessoais e senha.</p>
  </div>
</div>

<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-box">

      <div class="field">
        <%= f.label "Nome completo" %><br />
        <%= f.text_field :full_name, autocomplete: "full-name", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label "Nome de usuário" %><br />
        <%= f.text_field :username, autocomplete: "username", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "atualizar meu perfil", class:"btn btn-success m-2 update-button" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label "Nova senha (deixe em branco caso não queira alterar)" %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
        <% end %>
      </div>

      <div class="field">
        <%= f.label "Confirme senha" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label "Senha atual, por questão de segurança"%><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>
  <% end %>
    <div>
      <hr>
      <p>Deseja cancelar sua conta? <%= button_to "cancelar conta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-success" %></p>
    </div>
</div>
