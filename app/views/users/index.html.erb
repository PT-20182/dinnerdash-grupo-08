<% controller.check_admin_status %>

<div class="background">
    <div class="container1 " >
        <div><a class="navbar-brand">dinnerdash</a> </div>
        <div class="items">
            <a class="nav-item nav-link">Backoffice</a>
            <a class="nav-item nav-link">Perfil</a>
            <a class="nav-item nav-link">|</a>
            <a class="nav-item nav-link">Sair</a>
        </div>
    </div>
    <div class="title">
        <p class="title1">Backoffice</p>
        <p class="title2">Gerencie pedidos, refeições e mais</p>
    </div>
</div>
<nav class="navbar navbar-dark bg-dark">
    <div class="menu"> 
        <a class="nav-item nav-link">Pedidos</a>
        <a class="nav-item nav-link">Usuários</a>
        <a class="nav-item nav-link">Refeições</a>
        <a class="nav-item nav-link">Categorias de Refeições</a>
    </div>
</nav>
<div class="container box">
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th scope="col">Nome de usuário</th>
                <th scope="col">Nome completo</th>
                <th scope="col">Email</th>
                <th scope="col">Cadastrado em</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <% if user_signed_in? && user.id != current_user.id %>
                    <tr>
                        <% if user.admin? %>
                            <td><div class="badge badge-success">admin</div><%= user.username %></td>
                        <% else %>
                            <td><%= user.username%></td>
                        <% end %>
                        <td><%= user.full_name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.created_at.strftime("%Y/%m/%d") %></td>
                        <td><%= link_to 'Editar', edit_user_path(user) %></td>
                        <td><%= link_to 'Excluir', @user, method: :delete%></td>
                    </tr>
                <% end %>
            <% end %>
        </tbody>
    </table>
</div>

<%= render 'layouts/footer'%>