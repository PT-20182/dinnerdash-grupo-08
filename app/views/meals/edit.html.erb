<%= render "layouts/banner" %>

<div class="title-field">
    <h2>Editar refeição</h2>
</div>

<%= form_with model: @meal do |form| %>
    <div class="edit-box meal-edit-box">
        <div class="field">
            <%= form.label "Nome" %> <br />
            <%= form.text_field :name, placeholder: "Nome"%>
        </div>

        <div class="field">
            <%= form.label "Descrição" %> <br />
            <%= form.text_area :description, rows: 3, placeholder: "Descrição"%>
        </div>
        
        <%= form.submit "Salvar alterações", class:"btn btn-success" %>

        <div class="field">
            <%= form.label "Preço" %> <br />
            <%= form.text_field :price, placeholder: "Preço"%>
        </div>
        
        <div class="form-group">
            <label for="sel1">Disponibilidade</label><br />
            <%= form.select(:available, [['Disponível', true],['Indisponível', false]], selected: @meal.available) %>
        </div>

        <div class="field">
            <%= form.label "Imagem" %>
            <%= form.file_field :image %>
        </div>
        
        <div>
            <%= link_to 'Voltar', :back, class:"btn btn-secondary" %>
        </div>
    </div>
<% end %>

<%= render "layouts/footer" %>