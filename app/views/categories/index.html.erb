<nav class="navbar navbar-dark bg-dark">
    <div class="menu"> 
        <a class="nav-item nav-link">
            <%= link_to "Pedidos" %>
        </a>
        <a class="nav-item nav-link">
            <%= link_to "Usuários" %>
        </a>
        <a class="nav-item nav-link">
            <%= link_to "Refeições" %>
        </a>
        <a class="nav-item nav-link"> 
            <%= link_to "Categorias de Refeições", categories_path %>
        </a>
    </div>
</nav>

<div class="oi">
    <div class="container box">
        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                <th scope="col">Nome</th>
                <th scope="col">Numero de Refeições</th>
                <th scope="col">Cadastrada em</th>
                <th scope="col"></th>
                <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <% @categories.each do |category| %>
                <tr>
                <td><%= category.name %></td>
                <td>4</td>
                <td><%=category.created_at.strftime("%Y/%m/%d")%></td>
                <td><%= link_to 'editar', edit_category_path(category), method: 'get', class: "edit" %></td>
                <td><%= link_to 'excluir', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "remove" %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <%= link_to "Nova categoria de refeicao", new_category_path, class: "btn btn-success"%>
    </div>
</div>
<%= render 'layouts/footer'%>
