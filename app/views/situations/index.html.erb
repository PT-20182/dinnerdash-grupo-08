<table>
    <%= @situations.each do |situation| %>
    <tr>
        <td><%= link_to situation.description, situation_path(situation) %></td>
        <td><%= button_to 'Edit', edit_situation_path(situation), method: 'get'%></td>
        <td><%= button_to 'Remove', situation_path(situation), method: 'delete', data: { confirm: 'Are you sure?' } %> </td>
    </tr>
    <% end %>
</table>
<%= link_to "Add a New Situation", new_situation_path %>