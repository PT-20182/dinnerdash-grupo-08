<%= render "layouts/banner" %>

<div class="container">
<table class="table table-hover">
  	<thead class="thead-light ">
 		<tr>
      		<th scope="col">Descrição</th>
      		<th scope="col">Cadastrada em</th>
      		<th colspan="3"></th>
    	</tr>
  	</thead>
  	<tbody>
  		<% @situations.each do |situation| %>

   		<tr>
	     	<td><%= situation.description %></td>
	     	<td><%= situation.created_at.strftime("%d/%m/%Y") %></td>
	       	
	        <td><%= link_to 'editar', edit_situation_path(situation), class:"yellowLink", method: 'get'%></td>
	        <td><%= link_to 'excluir', situation, class:"redLink", method: :delete, data: { confirm: 'Are you sure?' }%></td>
    	</tr>
    	<% end %>
  </tbody>
</table>
<%= link_to "novo status do pedido", new_situation_path, class: "btn btn-success" %>
</div>

<%= render "layouts/footer" %>